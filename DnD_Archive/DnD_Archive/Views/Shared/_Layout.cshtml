@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DnD_Archive</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DnD_Archive.styles.css" asp-append-version="true" />
    <style>
        body {
            padding-top: 50px; /* Platz für den festen Header */
            background-color: #ffffff;
            color: #000000;

        }

        body.dark-mode {
            background-color: #121212;
            color: #ffffff;
        }

        header {
        
            position: sticky;
            top: 0;
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 5px 10px;
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            z-index: 1000;
            height: 30px; /* Kleinere Höhe für den Header */
        }

        body.dark-mode header {
            background-color: #1e1e1e;
        }

        .logo img {
            max-height: 30px; /* Noch kleinere Logo-Größe */
        }

        .user-profile {
            display: flex;
            align-items: center;
        }

        .user-profile .username {
            margin-right: 10px;
            cursor: pointer;
        }

        .user-profile .logout-button {
            margin-left: 10px;
            cursor: pointer;
        }

        .dark-mode-toggle-container {
            display: flex;
            align-items: center;
            margin-left: 20px;
            margin-right: 10px;
        }

        .dark-mode-toggle {
            margin-left: 5px;
        }



        

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

        .form-table {
            width: 100%;
            border-collapse: collapse;
        }

        .form-table th {
            background-color: #007bff;
            color: white;
            padding: 10px;
            text-align: left;
            border-radius: 8px 8px 0 0;
        }

        .form-table td {
            padding: 10px;
        }

        .form-table input[type="text"],
        .form-table input[type="email"] {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .form-table input[type="submit"],
        .form-table input[type="reset"] {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            margin-top: 10px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        .form-table input[type="submit"]:hover,
        .form-table input[type="reset"]:hover {
            background-color: #0056b3;
        }

        .form-table td:first-child {
            width: 30%;
            text-align: right;
            padding-right: 10px;
        }

        .form-table td:last-child {
            width: 70%;
        }

        .form-table input[type="reset"] {
            background-color: #dc3545;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <header>
            <div class="logo">
                <img src="~/images/logo.webp" alt="Logo" onclick="location.href='/Home/index'">
            </div>
            <div class="user-profile">
                <span class="username" onclick="location.href='/user/overview'">
                    @Context.Request.HttpContext.Session.GetString("UserName")
                </span>
                <button class="logout-button btn btn-secondary" onclick="location.href='/Start/Logout'">Abmelden</button>
                <div class="dark-mode-toggle-container">
                    <label for="dark-mode-toggle">Dark Mode</label>
                    <input type="checkbox" class="dark-mode-toggle" id="dark-mode-toggle">
                </div>
            </div>
        </header>
        <br>
        <br>
        <main class="row">
            <nav class="col-2">
                <partial name="Navigation" />
            </nav>
            <content class="col-8">
                @RenderBody()
            </content>
            <aside class="col-2">
                Seitenbereich
            </aside>
        </main>
    
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const toggleSwitch = document.querySelector('.dark-mode-toggle');
            
            // Load the current mode from local storage if available
            const currentMode = localStorage.getItem('mode');
            if (currentMode === 'dark') {
                document.body.classList.add('dark-mode');
                toggleSwitch.checked = true;
            }

            toggleSwitch.addEventListener('change', function () {
                if (this.checked) {
                    document.body.classList.add('dark-mode');
                    localStorage.setItem('mode', 'dark');
                } else {
                    document.body.classList.remove('dark-mode');
                    localStorage.setItem('mode', 'light');
                }
            });
        });
    </script>
</body>

</html>
